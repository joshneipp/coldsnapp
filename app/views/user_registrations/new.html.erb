
<div class="container">
<h2>Coldsnapp Signup</h2>
  <%= form_with url: '/user_registrations', local: true do |form| %>
  <div class="form">
    <%= form.text_field :username %>
    <%= form.label :username %>
  </div>
  <div class="form">
    <%= form.text_field :password %>
    <%= form.label :password %>
  </div>
  <div class="form">
    <%= form.text_field :sms_number %>
    <%= form.label :sms_number %>
  </div>
  <div class="form">
    <%= form.text_field 'settings[zip_code]' %>
    <%= form.label :zip_code %>
  </div>
  <div class="form">
    <%= form.submit %>
  </div>
  <% end %>
</div>